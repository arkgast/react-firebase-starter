{
  "name": "react-firebase-starter",
  "version": "0.0.1",
  "description": "Repo intended to serve as a base to start new react project",
  "main": "index.js",
  "scripts": {
    "lint:js": "eslint src/ --ext .js",
    "lint:scss": "stylelint src/**/*.scss",
    "lint": "npm run lint:js && npm run lint:scss",
    "build": "NODE_ENV=production webpack --progress --colors",
    "start": "NODE_ENV=development webpack-dev-server --progress --colors",
    "start:dash": "NODE_ENV=development webpack-dashboard -- webpack-dev-server --config ./webpack.config.js",
    "test": "jest",
    "coveralls": "jest && cat ./coverage/lcov.info | coveralls",
    "deploy": "firebase deploy"
  },
  "jest": {
    "collectCoverage": true,
    "coverageDirectory": "<rootDir>/coverage",
    "verbose": true,
    "coveragePathIgnorePatterns": [
      "<rootDir>/node_modules"
    ],
    "modulePaths": [
      "<rootDir>/src"
    ],
    "moduleFileExtensions": [
      "js"
    ],
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/public"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|svg|ttf|woff|woff2)$": "<rootDir>/src/components/__mocks__/fileTransformer.js",
      "^Components(.*)$": "<rootDir>/src/components",
      "^Data(.*)$": "<rootDir>/src/data",
      "^Hocs(.*)$": "<rootDir>/src/hocs",
      "^Scenes(.*)$": "<rootDir>/src/scenes",
      "^Services(.*)$": "<rootDir>/src/services",
      "^Styles(.*)$": "<rootDir>/src/styles"
    }
  },
  "repository": "git@github.com:arkgast/react-firebase-starter.git",
  "author": "Arnold Gandarillas Castillo <arkgast@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "firebase": "^4.9.0",
    "history": "^4.7.2",
    "material-ui": "^1.0.0-beta.30",
    "proptypes": "^1.1.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-redux": "^5.0.6",
    "react-router-dom": "^4.2.2",
    "react-router-redux": "next",
    "react-transition-group": "^2.2.1",
    "redux": "^3.7.2",
    "redux-logger": "^3.0.6",
    "redux-thunk": "^2.2.0"
  },
  "devDependencies": {
    "autoprefixer": "^7.2.5",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.1",
    "babel-loader": "^7.1.2",
    "babel-plugin-dynamic-import-node": "^1.2.0",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-plugin-transform-export-extensions": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-react-inline-elements": "^6.22.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-runtime": "^6.26.0",
    "clean-webpack-plugin": "https://github.com/arkgast/clean-webpack-plugin",
    "compression-webpack-plugin": "^1.1.3",
    "coveralls": "^3.0.0",
    "css-loader": "^0.28.9",
    "css-mqpacker": "^6.0.1",
    "duplicate-package-checker-webpack-plugin": "^2.1.0",
    "enzyme": "^3.3.0",
    "eslint": "^4.16.0",
    "eslint-config-standard": "^11.0.0-beta.0",
    "eslint-config-standard-jsx": "^4.0.2",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-node": "^5.2.1",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-react": "^7.5.1",
    "eslint-plugin-standard": "^3.0.1",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^1.1.6",
    "html-webpack-plugin": "^2.30.1",
    "image-webpack-loader": "^3.4.2",
    "jest": "^22.1.4",
    "material-ui-icons": "^1.0.0-beta.17",
    "node-sass": "^4.7.2",
    "offline-plugin": "^4.9.0",
    "postcss-loader": "^2.0.10",
    "react-hot-loader": "next",
    "react-test-renderer": "^16.2.0",
    "resolve-url-loader": "^2.2.1",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.19.1",
    "stylelint": "^8.4.0",
    "stylelint-config-standard": "^18.0.0",
    "stylelint-scss": "^2.2.0",
    "webpack": "^3.10.0",
    "webpack-bundle-analyzer": "^2.9.2",
    "webpack-config": "^7.5.0",
    "webpack-dashboard": "^1.0.2",
    "webpack-dev-server": "^2.11.1"
  }
}
